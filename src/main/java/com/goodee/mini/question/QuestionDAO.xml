<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.goodee.mini.question.QuestionDAO">
  	<sql id="search">
  		<where>
  			<choose>
  				<when test="">
  					
  				</when>
  			</choose>
  		</where>
  	</sql>
  
  	<select id="list" resultType="QuestionVO" parameterType="Pager">
  		SELECT * FROM QUESTION
  		<include refid="search"></include>
  		ORDER BY quest_no DESC
  		LIMIT #{startIndex}, #{endIndex}
  	</select>
  	
  	<select id="totalCount" resultType="Long" parameterType="Pager">
  		SELECT COUNT(quest_no) FROM QUESTION
  		<include refid="search"></include>
  	</select>
  	
  </mapper>